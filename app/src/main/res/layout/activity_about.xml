<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".About">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/_40sdp"
        android:textStyle="italic"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:src="@mipmap/icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore Maharashtra"
        android:textColor="@color/browser_actions_text_color"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"

        android:layout_marginLeft="30dp"
        android:text="@string/tourism_mobile_apps_help_users_for_planning_travel_accommodation_bookings_ticket_bookings_cab_booking_route_mapping_and_more"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/however_these_are_just_the_basic_uses_of_tourism_mobile_apps_and_more_tourist_services_can_be_delivered"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_35sdp"
        android:textSize="@dimen/_20sdp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/call1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call"
            android:layout_marginLeft="@dimen/_20sdp"/>
        <TextView
            android:id="@+id/call1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 - 8379027410"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/call2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call"
            android:layout_marginLeft="@dimen/_20sdp"/>
        <TextView
            android:id="@+id/call2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 - 7083267210"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="164dp"

        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.gms.ads.AdView>



</LinearLayout>