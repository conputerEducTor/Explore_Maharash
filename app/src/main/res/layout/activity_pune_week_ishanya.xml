<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PuneWeekIshanya">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fitsSystemWindows="true"
        android:background="?colorPrimary">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            app:collapsedTitleGravity="start"
            app:expandedTitleGravity="bottom"
            app:title="Ishanya Mall"
            app:contentScrim="@color/colorPrimaryDark"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ish"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/app_Bar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentInsetStart="72dp"
                app:layout_collapseMode="pin">



            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>




    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">
            <RelativeLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="20dp"
                android:background="@drawable/curve_background">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="300dp"
                    android:id="@+id/org"
                    android:layout_margin="15sp"
                    android:background="@drawable/curve_background_1">
                </RelativeLayout>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/org"
                    android:layout_toRightOf="@id/org"
                    android:text="Description"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ff3D00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:text="@string/ish_desc"
                    android:layout_toEndOf="@id/org"
                    android:layout_toRightOf="@id/org"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="20dp"
                android:layout_below="@id/one"
                android:background="@drawable/curve_background">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="120dp"
                    android:id="@+id/or"
                    android:layout_margin="15sp"
                    android:background="@drawable/curve_background_1">
                </RelativeLayout>


                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/or"
                    android:layout_toRightOf="@id/or"
                    android:text="Location"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ff3D00"/>
                <TextView
                    android:id="@+id/text3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/or"
                    android:layout_below="@id/text3"
                    android:text="@string/ish_loc"
                    android:textColor="#000"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="20dp"
                android:layout_below="@id/third"
                android:background="@drawable/curve_background">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="80dp"
                    android:id="@+id/or1"
                    android:layout_margin="15sp"
                    android:background="@drawable/curve_background_1">

                </RelativeLayout>

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/or1"
                    android:layout_toRightOf="@id/or1"
                    android:text="Opening Hours"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ff3D00"/>
                <TextView
                    android:id="@+id/text4_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text4"
                    android:text="@string/ish_time"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_toEndOf="@id/or1"
                    android:layout_toRightOf="@id/or1"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="20dp"
                android:layout_below="@id/four"
                android:background="@drawable/curve_background">

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="120dp"
                    android:id="@+id/or3"
                    android:layout_margin="15sp"
                    android:background="@drawable/curve_background_1">
                </RelativeLayout>

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/or3"
                    android:layout_toRightOf="@id/or3"
                    android:text="Nearest Bus Stop:-"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ff3D00"/>
                <TextView
                    android:id="@+id/text5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text5"
                    android:text="@string/ish_bus"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_toEndOf="@id/or3"
                    android:layout_toRightOf="@id/or3"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>